Tab1.MouseButton1Click:Connect(function()
	MainTab.Visible = true
end)

ToggleFrameOff.MouseButton1Click:Connect(function()
	ToggleFrameOn.Visible = true
	ToggleOn.Visible = true
	ToggleFrameOff.Visible = false
	ToggleOff.Visible = false


	game:GetService("UserInputService").InputBegan:connect(function(inputObject, gameProcessedEvent)
		if inputObject.KeyCode == Enum.KeyCode.E then

			for i, v in pairs(game.Players:children()) do
				if v.Backpack:findFirstChild("Knife") or v.Character:findFirstChild("Knife") then
					local esp = Instance.new("BoxHandleAdornment")
					esp.Parent = v.Character.Head
					esp.Size = Vector3.new(1,1,1)
					esp.Color3 = Color3.new(255, 0, 0)
					esp.AlwaysOnTop = true
					esp.Adornee = v.Character.Head
					esp.Visible = true
					esp.ZIndex = 2

				elseif v.Backpack:findFirstChild("Gun") or v.Character:findFirstChild("Gun") then
					local esp = Instance.new("BoxHandleAdornment")
					esp.Parent = v.Character.Head
					esp.Size = Vector3.new(1,1,1)
					esp.Color3 = Color3.new(0, 0, 255)
					esp.AlwaysOnTop = true
					esp.Adornee = v.Character.Head
					esp.Visible = true
					esp.ZIndex = 2
				else
					local esp = Instance.new("BoxHandleAdornment")
					esp.Parent = v.Character.Head
					esp.Size = Vector3.new(1,1,1)
					esp.Color3 = Color3.new(0, 255, 0)
					esp.AlwaysOnTop = true
					esp.Adornee = v.Character.Head
					esp.Visible = true
					esp.ZIndex = 2
				end
			end		
		end
	end)
end)

ToggleFrameOn.MouseButton1Click:Connect(function()
	ToggleFrameOn.Visible = false
	ToggleOn.Visible = false
	ToggleFrameOff.Visible = true
	ToggleOff.Visible = true


	game:GetService("UserInputService").InputBegan:connect(function(inputObject, gameProcessedEvent)
		if inputObject.KeyCode == Enum.KeyCode.F then
			for i, v in pairs(game.Players:children()) do
				for i, a in pairs(v.Character.Head:children()) do
					if a.ClassName == "BoxHandleAdornment" then
						a:remove()
					end
				end
			end
		end
	end)
end)
